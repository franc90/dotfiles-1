# ls
alias ls='ls -F --color=auto'
alias l='ls -Flh --color=auto'
alias ll='ls -Flha --color=auto'

# grep
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# diff
alias diff='colordiff'

# Set interactive and/or verbose
alias cp='cp -iv'
alias mv='mv -iv'
alias rm='rm -iv'
alias mkdir='mkdir -v'
alias rmdir='rmdir -v'

# ping
alias ping='ping -c 5'

# feh
alias feh='feh --scale-down --auto-zoom'

# dmenu
alias dmenu='dmenu -nb "#282A36" -nf "#F8F8F2" -sb "#BD93F9" -sf "#282A36" -fn "Source Code Pro SemiBold-10"'
alias dmenu_sans='dmenu -nb "#282A36" -nf "#F8F8F2" -sb "#BD93F9" -sf "#282A36" -fn "Lucida Grande-10"'
