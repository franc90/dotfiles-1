[bar/topbar]
wm-restack = bspwm
height = 22
foreground = #FFFFFF
background = #66282A36
font-0 = Lucida Grande:style=Bold:size=9;2
font-1 = SauceCodePro Nerd Font:style=Black:size=10;2
font-2 = SauceCodePro Nerd Font:style=Black:size=10;1
padding-right = 2
module-margin = 2
modules-left   = bspwm title
modules-center = date
modules-right  = wlan cpu temperature memory battery xbacklight alsa
cursor-click = pointer
tray-position = right

[module/bspwm]
type = internal/bspwm
label-focused  = %{T2}%name%
label-occupied = %{T2}%name%
label-urgent   = %{T2}%name%
label-empty    = %{T2}·
label-focused-padding  = 2
label-occupied-padding = 2
label-urgent-padding   = 2
label-empty-padding    = 2
label-focused-background  = #66000000
label-urgent-background   = #66FF0000

[module/title]
type = internal/xwindow
label-maxlen = 80

[module/date]
type = internal/date
interval = 1
label = %time% - %date%
time     = %R
date     = %a, %b %d
time-alt = %T
date-alt = %A, %B %d, %Y

[module/wlan]
type = internal/network
interface = wlp2s0
format-connected-prefix    = %{A1:urxvt -e nmtui-connect:}直 %{A}
format-disconnected-prefix = %{A1:urxvt -e nmtui-connect:}睊 %{A}
label-connected         = %essid%
label-disconnected      = Disconnected

[module/cpu]
type = internal/cpu
format-prefix = %{A1:urxvt -e htop:} %{A}

[module/temperature]
