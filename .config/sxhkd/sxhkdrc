#########
# Focus #
#########
# Focus the window in the given direction
super + {h,j,k,l}
	bspc node -f {west,south,north,east}
# Focus the given workspace
super + {1-9,0}
	bspc desktop -f '^{1-9,10}'
# Focus frequently used workspace conveniently 
alt + {a,s,d,f,g}
	bspc desktop -f '^{1-5}'
# Focus the next/previous window in the current workspace
super + {_,shift + }semicolon
	bspc node -f {next,prev}.local
# Focus the next/previous workspace in the current monitor
super + {_,shift + }grave
	bspc desktop -f {next,prev}.local
# Focus the last window
alt + Tab
	bspc node -f last
# Focus the last workspace
super + Tab
	bspc desktop -f last
# Preselect the direction
super + shift + {h,j,k,l}
	bspc node -p {west,south,north,east}
# Cancel the preselection for the focused desktop
super + Escape
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

##################
# Window control #
##################
# Close window
super + ctrl + q
	bspc node -c
# Swap the window in the given direction
super + ctrl + {h,j,k,l}
	bspc node -s {west,south,north,east}
# Send window to the given workspace
super + ctrl + {1-9,0}
	bspc node -d '^{1-9,10}'
# Swap the current window and the biggest window
super + ctrl + s
	bspc node -s biggest
# Toggle floating state
super + ctrl + f
    if [ -z "$(bspc query -N -n focused.floating)" ]; then \                    
        bspc node focused -t floating; \                                        
    else \                                                                      
        bspc node focused -t tiled; \                                           
    fi

###########
# Session #
###########
# Lock screen
super + alt + l
    i3lock-next
# Power menu
super + alt + p
    $HOME/.config/rofi/scripts/rofi-power
# Quit bspwm
super + alt + q
    bspc quit
# Reload bspwm and sxhkd
super + alt + r
    pkill -USR1 -x sxhkd && bspc wm -r

##############
# Media keys #
##############
# Volume
{XF86AudioMute,XF86AudioLowerVolume,XF86AudioRaiseVolume}
	amixer -q set Master {toggle,10%- unmute,10%+ unmute}
# Player
{XF86AudioPrev,XF86AudioPlay,XF86AudioNext}
	playerctl {previous,play-pause,next}
# Brightness
{XF86MonBrightnessDown,XF86MonBrightnessUp}
	xbacklight {-,+}10
# Screenshot
{_,ctrl + ,alt + }Print
    maim {_,-s,-i $(xdotool getactivewindow)} | xclip -selection clipboard -t image/png -i

################
# Quick launch #
################
# Launch program
super + space
    rofi -show drun
# Run command
super + r
    rofi -show run
# Terminal
super + Return
	urxvt
# Web browser
super + w
    firefox
# Translator
super + t
    $HOME/.config/rofi/scripts/rofi-trans
# Calculator
super + c
    $HOME/.config/rofi/scripts/rofi-calc
